generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Player {
  id        String   @id @default(uuid())
  name      String
  results   Result[] @relation("ResultToPlayer")
  games     Game[]   @relation("PlayerToGame")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Result {
  id        String   @id @default(uuid())
  player    Player   @relation("ResultToPlayer", fields: [playerId], references: [id])
  playerId  String
  buyIn     Int
  final     Int
  gameId    String
  game      Game     @relation("ResultToGame", fields: [gameId], references: [id])
  createdAt DateTime @default(now())

  @@index([playerId])
  @@index([gameId])
}

model Game {
  id        String   @id @default(uuid())
  date      DateTime
  players   Player[] @relation("PlayerToGame")
  results   Result[] @relation("ResultToGame")
  isOngoing Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
